{
  "manifest_version": 3,
  "name": "Songsterr Popup Remover",
  "version": "1.2",
  "description": "Automatically clicks 'continue with interruptions' to remove the annoying Songsterr popup.",
  "permissions": [],
  "host_permissions": [
    "*://www.songsterr.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.songsterr.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "songsterr-popup-remover@example.com"
    }
  }
}
